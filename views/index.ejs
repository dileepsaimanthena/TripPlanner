<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trip Planner</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap">
</head>
<body>
    <!-- Header -->
    <header>
        <div class="header-container">
            <h1>Trip Planner</h1>
            <nav>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="#">Documentation</a></li>
                    <li><a href="#">Contact</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <!-- Main Section -->
    <main>
        <section class="trip-planner-form">
            <h2>Plan Your Trip</h2>
            <form action="/" method="POST">
                <label for="src">Select Source:</label>
                <select name="src" id="src">
                    <% cities.forEach(function(city) { %>
                        <option value="<%= city.name %>"><%= city.name %></option>
                    <% }); %>
                </select>
                <label for="dst">Select Destination:</label>
                <select name="dst" id="dst">
                    <% cities.forEach(function(city) { %>
                        <option value="<%= city.name %>"><%= city.name %></option>
                    <% }); %>
                </select>

                <label for="type">Select Route Type:</label>
                <select name="type" id="type">
                    <option value="fast">Fastest Route</option>
                    <option value="cheap">Cheapest Route</option>
                    <option value="direct">Direct Route</option>
                </select>

                <button type="submit">Find Route</button>
            </form>

            <% if (path) { %>
                <div class="route-result">
                    <h3>Calculated Route:</h3>                    
                    <p><%= path %></p>
                </div>
            <% } %>
        </section>
    </main>

    <!-- Footer -->
    <footer>
        <p>&copy; 2024 Trip Planner. All rights reserved.</p>
    </footer>
</body>
</html>
